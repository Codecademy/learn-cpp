  cout << "You chose ";
  switch (user) {
    case 1:
      cout << "rock";
      break;
    case 2:
      cout << "paper";
      break;
    case 3:
      cout << "scissors";
      break;
    case 4:
      cout << "lizard";
      break;
    case 5:
      cout << "spock";
      break;
    default:
      cout << "invalid choice";
      break;
  }

  cout << ".\n";

  cout << "The computer chose ";
  switch (computer) {
    case 1:
      cout << "rock";
